<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="vmCbPicUrl"
            type="String" />
        <variable
            name="vmCbName"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/paddingPageX"
        android:layout_marginEnd="@dimen/paddingPageX"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivCb"
            bind:radius="@{10}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher"
            android:scaleType="fitXY"
            bind:placeHolder="@{@drawable/image_place_holder}"
            bind:imgUrl="@{vmCbPicUrl}"
            app:layout_constraintDimensionRatio="h,0.56"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <ImageView
            android:src="@drawable/bg_mask_gray"
            app:layout_constraintBottom_toBottomOf="@+id/ivCb"
            app:layout_constraintDimensionRatio="h,0.14"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            app:layout_constraintStart_toStartOf="@+id/ivCb"
            android:layout_marginStart="14sp"
            android:layout_marginBottom="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivCb"
            tools:text="清凉去火玉米粥"
            android:text="@{vmCbName}"
            android:textColor="@color/colorWhite"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
